@model ViewModels.SellerProfileViewModel
@{
    ViewBag.Title = "ویرایش";
    Layout = "~/Views/Shared/SellerLayout/_BackEndLayout.cshtml";
}

@using (Html.BeginForm("EditProfile", "SellerProducts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SellerId)
    @Html.HiddenFor(model => model.UserId)

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">اطلاعات هنرمند</div>
                <div class="panel-body">
