                        <div class="form-group">
                            @Html.LabelFor(model => model.MethodOfIntroduction, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.MethodOfIntroduction)
                                @Html.ValidationMessageFor(model => model.MethodOfIntroduction)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ImageUrl, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                               <img src="@Model.ImageUrl" width="100"/>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ResumeUrl))
                        {
                            <div class="form-group">
                                @Html.LabelFor(model => model.ResumeUrl, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <a href="@Model.ResumeUrl" class="btn btn-info" target="_blank">دانلود فایل رزومه</a>
                                </div>
                            </div>
                        }
                        @*<div class="form-group">
