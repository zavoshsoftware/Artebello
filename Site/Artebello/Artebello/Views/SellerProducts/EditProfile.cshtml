                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CellNum, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.CellNum)
                                @Html.ValidationMessageFor(model => model.CellNum)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Phone)
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ZipCode, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.ZipCode)
                                @Html.ValidationMessageFor(model => model.ZipCode)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CurrentProvince, new { @class = "control-label col-md-2" })
