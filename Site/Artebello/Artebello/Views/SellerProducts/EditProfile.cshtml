                        </div>

                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.ParticipatingForeignExhibitions, new { @class = "control-label" })
                            </div>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.ParticipatingForeignExhibitions)
