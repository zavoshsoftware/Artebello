@model Models.Blog

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm("Create", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title)

                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Order, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Order)

                    @Html.ValidationMessageFor(model => model.Order)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Body, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Body)

                    @Html.ValidationMessageFor(model => model.Body)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ImageUrl, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Kendo().Upload().Name("fileUpload").Multiple(false)
                    @Html.ValidationMessageFor(model => model.ImageUrl)
                    <dfn>اندازه عکس ها 260*365 پیکسل می باشد</dfn>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HeaderImageUrl, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Kendo().Upload().Name("fileUploadHeader").Multiple(false)
                    @Html.ValidationMessageFor(model => model.HeaderImageUrl)
                    <dfn>اندازه عکس ها 945*630 پیکسل می باشد</dfn>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HeaderUrl, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Kendo().Upload().Name("fileUploadHeaderUrl").Multiple(false)
                    @Html.ValidationMessageFor(model => model.HeaderUrl)
                    <dfn>اندازه عکس ها 1900*440 پیکسل می باشد</dfn>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UrlParam, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UrlParam)

                    @Html.ValidationMessageFor(model => model.UrlParam)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BlogCategoryId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("BlogCategoryId", String.Empty)
                    @Html.ValidationMessageFor(model => model.BlogCategoryId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IsActive)

                    @Html.LabelFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description)

                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group" id="buttons">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ایجاد" class="btn btn-primary" />
                    @Html.ActionLink("بازگشت به فهرست", "Index")
                </div>
            </div>
        </div>
    </div>
}

