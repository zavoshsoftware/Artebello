@model IEnumerable<Models.Order>

@{
    
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

        @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                                            columns.Bound(model => model.City.Title);
        columns.Bound(model => model.Code);
        columns.Bound(model => model.AmountStr);
        columns.Bound(model => model.TotalAmountStr);
        columns.Bound(model => model.DiscountAmountStr);
        columns.Bound(model => model.Address);
        columns.Bound(model => model.IsPaid);
        columns.Bound(model => model.PaymentDate);
        columns.Bound(model => model.RefId);
        columns.Bound(model => model.IsActive);
        columns.Bound(model => model.CreationDate);
					columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
							.Template(@<text>
@Html.ActionLink("جزئیات", "details", new { id = @item.Id }, new { @class = "k-button" })
								
									</text>).Width(200);
                  })
        //.ToolBar(toolbar =>
        //			{				
        //				toolbar.Custom().Action("Create","Orders").Text("افزودن");                          
        //			}
        //)         
        .DataSource(dataSource => dataSource
                                    .Server()

                                    .Model(model => model.Id(item => item.Id))
                    )
    )
