                <li class="product type-product">
                    <div class="side-item">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="item-media">
                                    <a href="/category/@product.UrlParam">
                                        <img src="@product.ImageUrl" alt="">
                                    </a>
                                    
                                </div>
                                <h3>
                                    <a href="/category/@product.UrlParam">@product.Title</a>
                                </h3>
                            </div>
                            <div class="col-md-6">
                                <div class="item-content">
                                    <h3>
                                        <a href="/category/@product.UrlParam">@product.Title</a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</section>








