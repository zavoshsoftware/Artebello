<section class="ls section_padding_top_110 section_padding_bottom_75 page_blog">
    <div class="container">
        <div class="isotope_container isotope blog_isotope row masonry-layout columns_margin_bottom_30" data-filters=".blog_filters">
            <div class="isotope-item col-lg-3 col-md-4 col-sm-6 @ViewBag.ProductGroups">
                <div class="vertical-item vertical-center blog-filters-container">
                    <div class="item-content">
                        <div class="display_table">
                            <div class="display_table_cell text-left">
                                <div class="heading bottommargin_45">
                                    <p class="text-uppercase josefin grey fontsize_20">وبلاگ</p>
                                    <h2 class="section_header topmargin_5 bottommargin_0">آخرین اخبار و مقالات</h2>
                                </div>
                                <div class="filters blog_filters">
                                    <a href="#" data-filter="*" class="selected">همه</a>

                                    @foreach (var category in Model.BlogCategories)
                                    {
                                        <a href="#" data-filter=".@category.Id">@category.Title</a>
                                    }
                                </div>
                                <p class="darklinks topmargin_90">
                                    <a href="/blog" class="theme_link">
                                        مشاهده تمامی مطالب
                                        <i class="rt-icon2-chevron-thin-left" aria-hidden="true"></i>

                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var blog in Model.Blogs)
            {
                <div class="isotope-item col-lg-3 col-md-4 col-sm-6 @blog.BlogCategoryId">
                    <article class="vertical-item item-type1 post">
                        <div class="item-media">
                            <img src="@blog.ImageUrl" alt="s">
                        </div>
                        <div class="item-content">
                            <div class="categories-links bottommargin_5 highlight">
                                <a href="/blog/@blog.UrlParam">@blog.CreationDate.ToShortDateString()</a>
                            </div>
                            <p class="fontsize_18 bold darklinks2">
                                <a href="/blog/@blog.UrlParam">
                                    @blog.Title
                                </a>
                            </p>
                            <div class="item-meta">
                                <p>
                                    @Html.Raw(string.Format(blog.Body.Length > 200 ? blog.Body.Substring(0, 200) + "..." : blog.Body))
                                </p>
                            </div>
                            <div class="post-social lightgreylinks">
                                <a href="#" class="social-icon soc-facebook"></a>
                                <a href="#" class="social-icon soc-twitter"></a>
                                <a href="#" class="social-icon soc-google"></a>
                                <a href="#" class="social-icon soc-instagram"></a>
                            </div>
                        </div>
                    </article>
                </div>
            }


        </div>
    </div>
</section>

