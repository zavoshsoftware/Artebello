<section class="ls ms columns_margin_0 columns_padding_0 page_portfolio">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 text-center">
                <div class="heading text-center section-title">
                    <p class="text-uppercase josefin grey fontsize_20">Artebello</p>
                    <h2 class="section_header bottommargin_0">جدیدترین آثار هنری</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="columns-4">
        <ul id="products" class="products list-unstyled grid-view">
            @foreach (var product in Model.LatestProducts)
            {
                <li class="product type-product">
                    <div class="side-item">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="item-media borderd-media">
                                    <a href="/product/@product.Code">
                                        <img src="@product.ImageUrl" alt="">
                                        @*<span class="newproduct">New</span>*@
                                    </a>
                                    <div class="product-buttons">
                                        <a href="#" rel="nofollow" class="favorite_button">
                                            <i class="rt-icon2-heart"></i>
                                        </a>
                                        <a href="#" rel="nofollow" class="add_to_cart_button">
                                            <i class="rt-icon2-basket"></i>
                                        </a>
                                    </div>
                                </div>
                                <h3>
                                    <a href="/product/@product.Code">@product.Title</a>
                                </h3>
                            </div>
